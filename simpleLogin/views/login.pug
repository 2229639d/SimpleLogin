extends layout

block content
  h2.page-header Login
  p Log in to Clients Area
  form(method='post', action='/users/login')
    .form-group
      label Username
      input.form-control(name='username', type='text', placeholder='Enter Userame')
    .form-group
      label Password
      input.form-control(name='password', type='password', placeholder='Enter Password')
    input.btn.btn-primary(name='submit', type='submit', value='Log In')